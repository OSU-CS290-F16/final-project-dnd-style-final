{{>header}}

<main>

<section class="info">
<div class="modal-header">
         <button type="button" id="location-remove-button">&times;</button>
      </div>
   <h2>{{camploca.name}}</h2>
   <div class="info-body">
   {{#if camploca.terrain}}
   <p><span class="label">Terrain Type: </span>{{camploca.terrain}}</p>
   {{/if}}
   {{#if camploca.alignment}}
   <p><span class="label">Alignment: </span>{{camploca.alignment}}</p>
   {{/if}}
   {{#if camploca.inventory}}
   <p><span class="label">Inventory: </span>{{camploca.inventory}}</p>
   {{/if}}
   {{#if camploca.notes}}
   <p><span class="label">Notes: </span>{{camploca.notes}}</p>
   {{/if}}
   </div>
</section>
<section class="info">
   <h2>NPCs</h2>
   <div class="info-body">
   <p><span id="select-npc">Click for NPCs</span></p>
   </div>
</section>
<section class="info">
   <h2>Pictures</h2>
   <div class="info-body">
   <p><span id="select-picture">Click for Pictures</span></p>
   </div>
</section>

</main>
{{>footer}}