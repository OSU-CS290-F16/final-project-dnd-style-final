<div class="add-campaign-button-container">
	<button id="add-campaign-button">+</button>
</div>

<div id="modal-backdrop" class="hidden"></div>
<div id="add-campaign-modal" class="hidden">
	<div class="modal-dialog">

		<div class="modal-header">
			<h3>Add a campaign</h3>
			<button type="button" class="modal-close-button">&times;</button>
		</div>

		<div class="modal-body">
			<div class="hidden">
				<div class="info-input-element">
					<label for="input-id">ID</label>
					<input type="text" id="input-id">
				</div>
				<div class="info-input-element">
					<label for="input-id">IDI</label>
					<input type="text" id="input-idi">
				</div>
			</div>
			<div class="info-input-element">
				<label for="input-name">Name</label>
				<input type="text" id="input-name">
			</div>
			<div class="info-input-element">
				<label for="input-notes">Notes</label>
				<input type="text" id="input-notes">
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="modal-cancel-button">Cancel</button>
			<button type="button" class="modal-accept-button">Add campaign</button>
		</div>
	</div>
</div>
