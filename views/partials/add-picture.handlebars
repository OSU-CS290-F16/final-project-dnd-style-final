<div class="add-picture-button-container">
	<button id="add-picture-button">+</button>
</div>

<div id="modal-backdrop" class="hidden"></div>
<div id="add-picture-modal" class="hidden">	
	<div class="modal-dialog">
		<div class="modal-header">
			<h3>Add a Photo</h3>
		<button type="button" class="modal-close-button">&times;</button>
		</div>
		<div class="modal-body">
      		<div class="info-input-element">
     				<label for="input-url">URL</label>
    				<input type="text" id="input-url">
      		</div>
      		<div class="info-input-element">
				<label for="input-caption">Caption</label>
				<input type="text" id="input-caption">
			</div>
		</div>

		<div class="modal-footer">
			<button type="button" class="modal-cancel-button">Cancel</button>
			<button type="button" class="modal-accept-button">Add Photo</button>
		</div>
	</div>
</div>